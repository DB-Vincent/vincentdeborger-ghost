{{!< default}}

{{!-- The tag above means: insert everything in this file
into the {body} tag of the default.hbs template --}}

<div class="sidebar md:col-span-1 min-w-full md:break-word">
    <h1 class="text-lg dark:text-white">Vincent De Borger</h1>
    <h2 class="text-gray-400">Business application engineer</h2>

    {{!-- Icoins --}}
    <div class="w-24 flex mt-4 mb-8 text-gray-400">
        <a href="https://twitter.com/vincentdeborger" aria-label="Personal Twitter account" target="_blank" rel="noopener" class="flex-1"><i class="fab fa-twitter hover:text-black dark:hover:text-white"></i></a>
        <a href="https://www.linkedin.com/in/vincent-de-borger/" aria-label="Personal LinkedIn account" target="_blank" rel="noopener" class="flex-1"><i class="fab fa-linkedin hover:text-black dark:hover:text-white"></i></a>
        <a href="https://github.com/DB-Vincent" target="_blank" aria-label="Personal Github account" rel="noopener" class="flex-1"><i class="fab fa-github hover:text-black dark:hover:text-white"></i></a>
    </div>

    {{!-- Back --}}
    <a href="{{@site.url}}"><span class="text-gray-400">‚Üê Back</span></a>
</div>

{{!-- The main content area --}}
<div class="md:col-span-3 {{post_class}}">

    {{!-- Post --}}
    {{#post}}
    <div class="mt-16 md:mt-0">
        <h1 class="text-2xl">{{ title }}</h1>

        {{#if feature_image}}
        <figure class="my-8">
            <img
                srcset="{{img_url feature_image size="s"}} 300w,
                        {{img_url feature_image size="m"}} 600w,
                        {{img_url feature_image size="l"}} 1000w,
                        {{img_url feature_image size="xl"}} 2000w"
                sizes="(min-width: 1400px) 1400px, 92vw"
                src="{{img_url feature_image size="xl"}}"
                alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
            />
            {{#if feature_image_caption}}
                <figcaption>{{feature_image_caption}}</figcaption>
            {{/if}}
        </figure>
        {{/if}}

        <div class="content mt-16 leading-loose break-words">
            {{content}}
        </div>
    </div>
    {{/post}}

    {{!-- Footer --}}
    <footer class="mt-32 md:mt-48">
        <span class="text-gray-300 dark:text-gray-500">Made in 2021 by myself using <a href="http://https://ghost.org/" class="text-gray-500 dark:text-gray-300">Ghost</a>, <a href="https://tailwindcss.com/" class="text-gray-500 dark:text-gray-300">Tailwind</a> and lots of <span class="text-gray-500 dark:text-gray-300 coffee-cursor">coffee</span>.</span>
    </footer>
</div>